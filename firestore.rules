rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Verifica si el usuario que pide datos tiene rol 'admin' en su documento
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- REGLAS DE USUARIOS ---
    match /users/{userId} {
      // 1. TODO EL MUNDO puede ver los perfiles (para que el p√∫blico vea portafolios)
      allow read: if true;

      // 2. CREAR: Cualquiera puede registrarse.
      allow create: if request.auth != null;

      // 3. EDITAR:
      // - El Programador/Usuario edita SU propio perfil.
      // - El Administrador puede editar CUALQUIER perfil (para ascender/degradar/banear).
      allow update: if isOwner(userId) || isAdmin();
      
      // 4. ELIMINAR:
      // - Solo el Administrador puede borrar cuentas completamente.
      allow delete: if isAdmin();
    }
  }
}